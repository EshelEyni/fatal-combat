{
   "name": "fatal-combat",
   "private": true,
   "workspaces": [
      "frontend"
   ],
   "scripts": {
      "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
      "dev:frontend": "npm --prefix frontend run dev",
      "dev:backend": "npm --prefix backend run dev",
      "deploy": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy.ps1"
   },
   "dependencies": {
      "concurrently": "^8.0.1",
      "gsap": "^3.13.0"
   },
   "devDependencies": {
      "prettier": "^3.7.4"
   }
}
